    <!-- Square eyes -->
    <rect class="eye" x="216.968" y="218.057" width="72.323" height="72.685"/>
    <rect class="eye" x="433.936" y="218.057" width="72.323" height="72.685"/>
  </svg>
  <span class="logo-text">Sprites</span>
</a>

<style>
  .site-title {
    align-items: center;
    gap: 0.5rem;
    font-size: var(--sl-text-h4);
    color: var(--sl-color-white);
    text-decoration: none;
    white-space: nowrap;
    min-width: 0;
  }

  .logo-icon {
    height: 1.25rem;
    width: auto;
    flex-shrink: 0;
  }

  .logo-icon .eye {
    fill: black;
  }

  :global([data-theme='light']) .logo-icon .eye {
    fill: white;
  }

  .logo-text {
    font-family: 'Fricolage Grotesque', -apple-system, BlinkMacSystemFont, sans-serif;
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
  }
</style>
